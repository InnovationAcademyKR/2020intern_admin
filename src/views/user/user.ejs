<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('../common/header.ejs') %>
</head>

<body id="page-top">
  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include ('../common/sidebar.ejs') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include ('../common/topbar.ejs') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">사용자 관리</h1>
            <button class="btn btn-primary shadow-sm" id="userCreateButton" data-toggle="modal" data-target="#userCreate">
              회원 생성
            </button>
          </div>
          
          <!-- 검색 조건 -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">회원 조회</h6>
            </div>
            <div class="card-body">
              <form method="GET" action="/user" name="searchUserForm">
                <ul class="list-group list-group-flush">
                  <!-- 회원 종류-->
                  <li class="list-group-item">
                    <div class="form-row">
                      <div class="form-inline col-md-1">
                        <label>
                          <h5>회원 종류</h5>
                        </label>
                      </div>
                      <div class="form-inline col-md-1">
                        <select class="form-control" name="searchType">
                          <option value="all">전체</option>
                          <option value="0">멘티</option>
                          <option value="1">멘토</option>
                          <option value="2">관리자</option>
                        </select>
                      </div>
                    </div>
                  </li>
                  
                  <!-- 검색어 -->
                  <li class="list-group-item">
                    <div class="form-row">
                      <div class="form-group form-inline col-md-1">
                        <label>
                          <h5>검색어</h5>
                        </label>
                      </div>
                      <div class="form-group form-inline col-md-1">
                        <select class="form-control" name="searchOption">
                          <option value="ID">ID</option>
                          <option value="name">이름</option>
                          <option value="email">이메일</option>
                        </select>
                      </div>
                      <div class="form-group form-inline col-md-6">
                        <input class="form-control col-md-12" type="text" name="searchWord">
                      </div>
                    </div>
                  </li>
                  
                  <!-- 회원 권한 -->
                  <li class="list-group-item">
                    <div class="form-row">
                      <div class="form-group form-inline col-md-1">
                        <label>
                          <h5>회원권한</h5>
                        </label>
                      </div>
                      <div class="form-group form-inline col-md-1">
                        <select class="form-control" name="searchPermission">
                          <option value="all">전체</option> 
                          <option value="0">일반</option>
                          <option value="1">관리자</option>
                          <option value="2">슈퍼 관리자</option>
                        </select>
                      </div>
                    </div>
                  </li>
                </ul>
                <!-- 검색 버튼 -->
                 <div class="form-row">
                   <div class="col">
                    <button type="submit" class="btn btn-primary align-self-center">검색</button>
                   </div>
                 </div>
              </form>
            </div>
          </div>

          <!-- 검색 결과 테이블 -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">검색 결과</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered table-hover" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>USN</th>
                      <th>종류</th>
                      <th>ID</th>
                      <th>이름</th>
                      <th>이메일</th>
                      <th>알림 발송</th>
                      <th>삭제</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (let i = 0; i < users.length; i++) { %>
                    <tr>
                      <td><%= users[i].USN %></td>
                      <td><%= users[i].type %></td>
                      <td><%= users[i].ID %></td>
                      <td><%= users[i].name %></td>
                      <td><%= users[i].email %></td>
                      <td>2011/04/25</td>
                      <td>
                        <button class="btn btn-primary d-inline" name="deleteButton" type="button" value="<%=users[i].USN%>">삭제</button>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include ('../common/footer.ejs') %>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="login">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <!-- 유저 추가 모달 -->
  <%- include ('./createusermodal.ejs')%>
  
  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- 모달 닫을시에 입력값 초기화 -->
  <script src="/js/user/closeModal.js"></script>

  <!-- Send Ajax 메소드 추가 -->
  <script src="/js/common/ajax.js"></script>
  
  <!-- 유저 생성, 유저 상세조회에 대한 이벤트 -->
  <script type="module" src="/js/user/user.js"></script>

</body>

</html>
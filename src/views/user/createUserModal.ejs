<div class="modal fade" id="userCreate" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">회원 생성</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <form action="/user" method="POST" id="userForm"> 
        <div class="modal-body">
          <div class="container-fluid">
            <ul class="list-group list-group-flush">
              <!-- 회원 종류 -->
              <li class="list-group-item">
                <div class="row form-group">
                  <div class="form-inline col-md-2">
                    <label>회원 종류</label>
                  </div>
                  <div class="form-inline col-md-6">
                    <select class="form-control" name="type">
                      <option value="2" selected>없음</option>
                      <option value="1">멘토</option>
                      <option value="0">멘티</option>
                    </select>
                  </div>
                </div>
              </li>

              <!-- 아이디 -->
              <li class="list-group-item">
                <div class="row form-group">
                  <div class="form-inline col-md-2">
                    <label>ID</label>
                  </div>
                  <div class="form-inline col-md-6">
                    <input class="form-control" type="text" name="id">
                  </div>
                </div>
              </li>

              <!-- 이름 -->
              <li class="list-group-item">
                <div class="row form-group">
                  <div class="form-inline col-md-2">
                    <label>이름</label>
                  </div>
                  <div class="form-inline col-md-6">
                    <input class="form-control" type="text" name="name" id="name">
                  </div>
                </div>
              </li>

              <!-- 이메일 -->
              <li class="list-group-item">
                <div class="row form-group">
                  <div class="form-inline col-md-2">
                    <label>E-mail</label>
                  </div>
                  <div class="form-inline col-md-6">
                    <input class="form-control" type="email" name="email" id="email">
                  </div>
                </div>
              </li>

              <!-- 패스워드 -->
              <li class="list-group-item">
                <div class="row form-group">
                  <div class="form-inline col-md-2">
                    <label>Password</label>
                  </div>
                  <div class="form-inline col-md-6">
                    <input class="form-control" type="password" name="password" id="password">
                  </div>
                </div>
              </li>

              <!-- 유저 권한 -->
              <li class="list-group-item">
                <div class="row form-group">
                  <div class="form-inline col-md-2">
                    <label>유저 권한</label>
                  </div>
                  <div class="form-inline col-md-6">
                    <select class="form-control" name="permission" id="permission">
                      <option value="0">일반</option>
                      <option value="1">관리자</option>
                      <option value="2">슈퍼 관리자</option>
                    </select>
                  </div>
                </div>
              </li>
            </ul>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary align-self-center" id="createUserButton">생성</button>
        </div>
      </form>
    </div>
  </div>
</div>

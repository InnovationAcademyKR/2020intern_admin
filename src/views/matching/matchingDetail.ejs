<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('../common/header.ejs') %>
</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include ('../common/sidebar.ejs') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include ('../common/topbar.ejs') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3  mb-0 text-gray-800">상세 매칭정보</h1>
            <button class="btn btn-danger shadow-sm" id="userUpdateButton" onclick="onDelete('<%= matching.id %>')">
              매칭정보 삭제
            </button>
          </div>

          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">매칭정보</h6>
            </div>
            <div class="card-body">
              <div class="container-fluid">

                <ul class="list-group list-group-flush">

                  <!-- 매칭번호(ID), 상태  -->
                  <li class="list-group-item">
                    <div class="row">
                      <!-- 매칭번호 -->
                      <div class="form-row col-md-6">
                        <div class="form-inline col-md-2">
                          <lable>매칭번호</lable>
                        </div>
                        <div class="form-inline col-md-6">
                          <span><%= matching.id %></span>
                        </div>
                      </div>

                      <!-- 매칭상태 -->
                      <div class="form-row col-md-6">
                        <div class="form-inline col-md-2">
                          <lable>상태</lable>
                        </div>
                        <div class="form-inline col-md-6">
                          <span>
                            <% if(matching.state == 0) { %> 대기
                            <% } else if(matching.state == 1) { %> 수락
                            <% } else { %> 거절
                            <% } %>
                          </span>
                        </div>
                      </div>
                    </div>
                  </li>

                  <!-- 멘토, 멘티  -->
                  <li class="list-group-item">
                    <div class="row">
                      <!-- 멘티 -->
                      <div class="form-row col-md-6">
                        <div class="form-inline col-md-2">
                          <lable>멘티 (ID)</lable>
                        </div>
                        <div class="form-inline col-md-6">
                          <span><%= matching.mentee_ID %></span>
                        </div>
                      </div>

                      <!-- 멘토 -->
                      <div class="form-row col-md-6">
                        <div class="form-inline col-md-2">
                          <lable>멘토 (ID)</lable>
                        </div>
                        <div class="form-inline col-md-6">
                          <span><%= matching.mentor_ID %></span>
                        </div>
                      </div>
                    </div>
                  </li>

                  <!-- 열람 여부  -->
                  <li class="list-group-item">
                    <div class="form-row">
                      <div class="form-inline col-md-1">
                        <lable>열람 여부</lable>
                      </div>
                      <div class="form-inline">
                        <span>
                          <% if(matching.is_checked == 1) { %> 열람
                          <% } else { %> 미열람
                          <% } %>
                        </span>
                      </div>
                    </div>
                  </li>

                  <!-- 매칭 요청일자  -->
                  <li class="list-group-item">
                    <div class="form-row">
                      <div class="form-inline col-md-1">
                        <lable>매칭 요청일자</lable>
                      </div>
                      <div class="form-inline">
                        <span><%= matching.request_time %></span>
                      </div>
                    </div>
                  </li>

                  <!-- 매칭 응답일자  -->
                  <li class="list-group-item">
                    <div class="form-row">
                      <div class="form-inline col-md-1">
                        <lable>매칭 응답일자</lable>
                      </div>
                      <div class="form-inline">
                        <span><%= matching.response_time %></span>
                      </div>
                    </div>
                  </li>

                  <!-- 요청 사유 -->
                  <li class="list-group-item">
                    <div class="form-row">
                      <div class="form-inline col-md-1">
                        <label>요청 사유</label>
                      </div>
                      <div class="col-md-8">
                        <textarea class="form-control" name="description" rows="5" readonly><%= matching.request_message %></textarea>
                      </div>
                    </div>
                  </li>

                  <!-- 요청 거절사유 -->
                  <li class="list-group-item">
                    <div class="form-row">
                      <div class="form-inline col-md-1">
                        <label>거절 사유</label>
                      </div>
                      <div class="col-md-8">
                        <textarea class="form-control" name="description" rows="5" readonly><%= matching.response_message %></textarea>
                      </div>
                    </div>
                  </li>

                  <!-- 수정, 취소 버튼-->
                  <li class="list-group-item">
                    <div class="form-row d-flex justify-content-center">
                      <div class="form-inline ">
                        <button class="btn btn-outline-primary mx-3" type="button" onclick="location.href = 'update/<%= matching.id %>'" >매칭정보 수정</button>
                        <button class="btn btn-outline-secondary mx-3" type="button" onclick="location.href = '/matching' ">뒤로가기</button>
                      </div>
                    </div>
                  </li>
                </ul>

              </div>
            </div>

          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include ('../common/footer.ejs') %>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <%- include ('../common/logoutModal.ejs') %>

  <script type="text/javascript" src="/js/matching/matching-delete.js"></script>
  <script type="text/javascript" src="/js/common/ajax.js"></script>

</body>

</html>
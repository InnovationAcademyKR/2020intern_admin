<div class="modal fade" id="matching-create" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">매칭정보 생성</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>

      <!-- onsubmit="createSubmit(); return false;" -->
      <!-- create form -->
      <form id="create-form" name="createForm" method="POST", action="/matching"> 
        <div class="modal-body">
          <div class="container-fluid">
            <ul class="list-group list-group-flush">

              <!-- Mentor ID -->
              <li class="list-group-item">
                <div class="row form-group">
                  <div class="form-inline col-md-2">
                    <label>멘토 ID</label>
                  </div>
                  <div class="form-inline col-md-6">
                    <input class="form-control" type="text" name="mentorUSN" required>
                  </div>
                </div>
              </li>

              <!-- Mentee ID -->
              <li class="list-group-item">
                <div class="row form-group">
                  <div class="form-inline col-md-2">
                    <label>멘티 ID</label>
                  </div>
                  <div class="form-inline col-md-6">
                    <input class="form-control" type="text" name="menteeUSN" required>
                  </div>
                </div>
              </li>

              <!-- State -->
              <li class="list-group-item">
                <div class="row form-group align-items-center">
                  <div class="form-check col-md-2">
                    <label>상태</label>
                  </div>
                  
                  <div class="form-check form-check-inline col-md-2">
                    <input class="form-check-input" type="radio" name="state" id="state2" value="0" checked>
                    <label class="form-check-label" for="state2">요청</label>
                  </div>
                  <div class="form-check form-check-inline col-md-2">
                    <input class="form-check-input" type="radio" name="state" id="state3" value="1">
                    <label class="form-check-label" for="state3">수락</label>
                  </div>
                  <div class="form-check form-check-inline col-md-2">
                    <input class="form-check-input" type="radio" name="state" id="state4" value="2">
                    <label class="form-check-label" for="state4">거절</label>
                  </div>
                </div>
              </li>


              <!-- Request Message -->
              <li class="list-group-item">
                <div class="row form-group">
                  <div class="form-group">
                    <label for="request-reason">요청 메시지</label>
                    <input type="text" class="form-control" id="request-reason" name="requestMessage" required>
                  </div>
                </div>
              </li>

              <!-- Response Message -->
              <li class="list-group-item" id="reject-input-form" style="display: none;">
                <div class="row form-group">
                  <div class="form-group">
                    <label for="reject-reason">응답 메시지</label>
                    <input type="text" class="form-control" id="reject-reason" name="responseMessage">
                  </div>
                </div>
              </li>              

            </ul>
          </div>
          
        </div>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary align-self-center" id="createUserButton">생성</button>
        </div>
      </form>
    </div>
  </div>
</div>

<script type="text/javascript" src="/js/matching/matching-create.js"></script>
<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('../common/header.ejs') %>

  <link href="/css/bootstrap-datepicker.css" rel="stylesheet">



</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include ('../common/sidebar.ejs') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include ('../common/topbar.ejs') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">Log</h1>
          </div>

          <!-- 검색 조건 -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">로그 조회</h6>
            </div>
            <div class="card-body">
              <form name="logSearchingForm" method="GET" action="/log">
                <input type="hidden" name="queryType" value="SEARCH">
                <ul class="list-group list-group-flush">

                  <!-- mentor / mentee -->
                  <li class="list-group-item">
                    <div class="form-row form-inline">
                      <div class="form-inline col-md-3">
                        <div class="col-auto">
                          <span>상태코드</span>
                        </div>
                        <div class="col-auto">
                            <select name="statusCode" class="custom-select">
                                <option value="200" selected>200</option>
                                <option value="300">300</option>
                                <option value="400">400</option>
                                <option value="500">500</option>
                              </select>
                        </div>
                      </div>

                      <div class="form-inline col-md-3">
                        <div class="col-auto">
                          <span>HTTP Method</span>
                        </div>
                        <div class="col-auto">
                            <select name="httpMethod" class="custom-select">
                                <option value="GET" selected>GET</option>
                                <option value="POST">POST</option>
                                <option value="PUT">PUT</option>
                                <option value="DELETE">DELETE</option>
                              </select>
                        </div>
                      </div>
                    </div>
                  </li>

                  <!-- 관계생성 일자 -->
                  <li class="list-group-item">
                    <div class="form-row form-inline">
                      <div class="col-md-1">
                        <label>
                          검색 기간
                        </label>
                      </div>
                      <div class="col-md-1 form-check">
                        <input type="checkbox" class="form-check-input" id="isTotal" name="isTotal">
                        <label class="form-check-label" for="isTotal">전체 기간</label>
                      </div>
                      <div class="col-auto">
                        <input type="text" id="datePicker" name="startDate" class="form-control start-date">
                      </div>
                      ~
                      <div class="col-auto">
                        <input type="text" id="datePicker" name="endDate" class="form-control end-date">
                      </div>
                    </div>
                    <input type="hidden" name="startDateSubmit">
                    <input type="hidden" name="endDateSubmit">
                  </li>
                </ul>
                <!-- 조회 버튼 -->
                <div class="form-row">
                  <div class="col-auto">
                    <button type="submit" class="btn btn-primary align-self-center">조회</button>
                  </div>
                </div>
              </form>
            </div>
          </div>

          <!-- 검색 결과 테이블 -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">검색 결과</h6>
              <small id="resultCount">Total <%= log.length %></small>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>일자</th>
                      <th>상태코드</th>
                      <th>메소드</th>
                      <th>URL</th>
                      <th>Referer</th>
                      <th>비고</th>
                    </tr>
                  </thead>
                  <tbody id='dataBody'>
                    <% if(log.length == 0) { %>
                    <td colspan="7">조건에 해당되는 데이터가 없습니다.</td>
                    <% } %>
                    <% log.forEach(elem => { %>
                    <tr>
                      <td colspan="6"><%= elem %></td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include ('../common/footer.ejs') %>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <%- include ('../common/logoutModal.ejs') %>

  <script src="/js/bootstrap-datepicker.js"></script>
  <script src="/js/bootstrap-datepicker.ko.min.js"></script>

  <!-- moment.js module -->
  <script src="/js/moment.min.js"></script>
  
  <script type="text/javascript" src="/js/matching/date-config.js"></script>

  <!-- ajax -->
  <script src="/js/common/ajax.js"></script>
</body>

</html>
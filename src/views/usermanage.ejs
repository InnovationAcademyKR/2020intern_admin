<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('./common/header.ejs') %>
</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include ('./common/sidebar.ejs') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include ('./common/topbar.ejs') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">사용자 관리</h1>
            <a href="#" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
          </div>
          
          <!-- 검색 조건 -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">회원 조회</h6>
            </div>
            <div class="card-body">
              <form>
                <!-- 회원 종류-->
                <div class="form-row">
                  <div class="form-check form-check-inline col-md-1">
                    <label class="form-check-label"><h5>회원 종류</h5></label>
                  </div>
                  <div class="form-check form-check-inline col-md-1">
                    <input class="form-check-input" type="radio" name="userType" id="userType1" value="all">
                    <label class="form-check-label" for="userType1">전체</label>
                  </div>
                  <div class="form-check form-check-inline col-md-1">
                    <input class="form-check-input" type="radio" name="userType" id="userType2" value="1">
                    <label class="form-check-label" for="userType2">멘티</label>
                  </div>
                  <div class="form-check form-check-inline col-md-1">
                    <input class="form-check-input" type="radio" name="userType" id="userType3" value="2">
                    <label class="form-check-label" for="userType3">멘토</label>
                  </div>
                  <div class="form-check form-check-inline col-md-1">
                    <input class="form-check-input" type="radio" name="userType" id="userType4" value="3">
                    <label class="form-check-label" for="userType4">관리자</label>
                  </div>
                </div>

                <!-- 검색어 -->
                <div class="form-row">
                  <div class="form-group form-inline col-md-1">
                    <label><h5>검색어</h5></label>
                  </div>
                  <div class="form-group form-inline col-md-1"> 
                    <select class="form-control" id="searchOption">
                      <option>아이디</option>
                      <option>조건</option>
                      <option>etc</option>
                    </select>  
                  </div>
                  <div class="form-group form-inline col-md-6">
                    <input class="form-control col-md-12" type="text" id="searchQuery">
                  </div>
                </div>

                <!-- 회원 권한 -->
                <div class="form-row">
                  <div class="form-group form-inline col-md-1">
                    <label><h5>회원권한</h5></label>
                  </div>
                  <div class="form-group form-inline col-md-1">
                    <select class="form-control" id="permission">
                      <option>일반</option>
                      <option>관리자</option>
                      <option>슈퍼 관리자</option>
                    </select> 
                  </div>
                </div>

                 <!-- 가입일 -->
                
                 <!-- 검색 버튼 -->
                 <div class="form-row">
                   <div class="col">
                    <button type="submit" class="btn btn-primary align-self-center">검색</button>
                   </div>
                 </div>
              </form>
            </div>
          </div>

          <!-- 검색 결과 테이블 -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">검색 결과</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>USN</th> 
                      <th>종류</th>
                      <th>이름</th>
                      <th>이메일</th>
                      <th>알림 발송</th>
                      <th>수정/삭제</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (let i = 0; i < users.length; i++) { %>
                      <tr>
                        <td><%= users[i].id %></td>
                        <td><%= users[i].type %></td>
                        <td><%= users[i].name %></td>
                        <td><%= users[i].email %></td>
                        <td>2011/04/25</td>
                        <td>$320,800</td>
                      </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include ('./common/footer.ejs') %>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="login">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="vendor/chart.js/Chart.min.js"></script>

  <!-- Page level custom scripts -->
  <script src="js/demo/chart-area-demo.js"></script>
  <script src="js/demo/chart-pie-demo.js"></script>

</body>

</html>
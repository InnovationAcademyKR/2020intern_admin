<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('../common/header.ejs') %>
</head>

<body id="page-top">

  <!-- Page Wrapper -->
  <div id="wrapper">

    <!-- Sidebar -->
    <%- include ('../common/sidebar.ejs') %>
    <!-- End of Sidebar -->

    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

      <!-- Main Content -->
      <div id="content">

        <!-- Topbar -->
        <%- include ('../common/topbar.ejs') %>
        <!-- End of Topbar -->

        <!-- Begin Page Content -->
        <div class="container-fluid">

          <!-- Page Heading -->
          <div class="d-sm-flex align-items-center justify-content-between mb-4">
            <h1 class="h3 mb-0 text-gray-800">알림 관리</h1>
            <button class="btn btn-primary shadow-sm" id="notiCreateButton" data-toggle="modal" data-target="#notiCreate">
              알림 생성
            </button>
          </div>
          
          <!-- 검색 조건 -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">회원 조회</h6>
            </div>
            <div class="card-body">
              <form>
                <ul class="list-group list-group-flush">

                  <!-- 알림 종류, 열람 여부-->
                  <li class="list-group-item">
                    <div class="row">
                      <!-- 알림 종류 -->
                      <div class="form-row col-md-6">
                       <div class="form-group form-inline col-md-2">
                        <h5>알림 종류</h5>
                       </div>
                       <div class="form-group form-inline col-md-10">
                        <select class="form-control" name="type">
                          <option>메세지</option>
                          <option>문데</option>
                          <option>몬데</option>
                        </select>
                       </div> 
                      </div>

                      <!-- 열람 여부 -->
                      <div class="form-row col-md-6">
                        <div class="form-check form-check-inline col-md-2">
                          <label class="form-check-label">
                            <h5>열람 여부</h5>
                          </label>
                        </div>
                        <div class="form-check form-check-inline col-md-2">
                          <input class="form-check-input" type="radio" name="isChecked" id="isChecked1" value="all">
                          <label class="form-check-label" for="isChecked1">전체</label>
                        </div>
                        <div class="form-check form-check-inline col-md-2">
                          <input class="form-check-input" type="radio" name="isChecked" id="isChecked2" value="1">
                          <label class="form-check-label" for="isChecked2">열람</label>
                        </div>
                        <div class="form-check form-check-inline col-md-2">
                          <input class="form-check-input" type="radio" name="isChecked" id="isChecked3" value="2">
                          <label class="form-check-label" for="isChecked3">미열람</label>
                        </div>
                      </div>
                    </div>
                  </li>
                  
                  <!-- 송신자 -->
                  <li class="list-group-item">
                    <div class="form-row">
                      <div class="form-group form-inline col-md-1">
                        <label>
                          <h5>송신자</h5>
                        </label>
                      </div>
                      <div class="form-group form-inline col-md-1">
                        <select class="form-control" name="sender">
                          <option>email</option>
                          <option>ID</option>
                          <option>이름</option>
                        </select>
                      </div>
                      <div class="form-group form-inline col-md-6">
                        <input class="form-control col-md-12" type="text" name="senderQuery">
                      </div>
                    </div>
                  </li>
                  
                  <!-- 수신자 -->
                  <li class="list-group-item">
                    <div class="form-row">
                      <div class="form-group form-inline col-md-1">
                        <label>
                          <h5>수신자</h5>
                        </label>
                      </div>
                      <div class="form-group form-inline col-md-1">
                        <select class="form-control" name="receiver">
                          <option>email</option>
                          <option>ID</option>
                          <option>이름</option>
                        </select>
                      </div>
                      <div class="form-group form-inline col-md-6">
                        <input class="form-control col-md-12" type="text" name="receiverQuery">
                      </div>
                    </div>
                  </li>

                </ul>
                <!-- 검색 버튼 -->
                 <div class="form-row">
                   <div class="col">
                    <button type="submit" class="btn btn-primary align-self-center">검색</button>
                   </div>
                 </div>
              </form>
            </div>
          </div>

          <!-- 검색 결과 테이블 -->
          <div class="card shadow mb-4">
            <div class="card-header py-3">
              <h6 class="m-0 font-weight-bold text-primary">검색 결과</h6>
            </div>
            <div class="card-body">
              <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                  <thead>
                    <tr>
                      <th>알림번호</th>
                      <th>종류</th>
                      <th>송신자</th>
                      <th>수신자</th>
                      <th>생성일자</th>
                      <th>열람여부</th>
                      <th>삭제</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (let i = 0; i < notifications.length; i++) { %>
                    <tr>
                      <td><%= notifications[i].id %></td>
                      <td><%= notifications[i].type %></td>
                      <td><%= notifications[i].receiver %></td>
                      <td><%= notifications[i].sender %></td>
                      <td><%= notifications[i].creationTime %></td>
                      <td><%= notifications[i].isChecked %></td>
                      <td>
                        <button class="btn btn-primary d-inline" name="deleteButton" type="button" value="<%=notifications[i].id%>">삭제</button>
                      </td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
            </div>
          </div>

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include ('../common/footer.ejs') %>
      <!-- End of Footer -->

    </div>
    <!-- End of Content Wrapper -->

  </div>
  <!-- End of Page Wrapper -->

  <!-- Scroll to Top Button-->
  <a class="scroll-to-top rounded" href="#page-top">
    <i class="fas fa-angle-up"></i>
  </a>

  <!-- Logout Modal-->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
          <button class="close" type="button" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">×</span>
          </button>
        </div>
        <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
        <div class="modal-footer">
          <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
          <a class="btn btn-primary" href="login">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap core JavaScript-->
  <script src="/vendor/jquery/jquery.min.js"></script>
  <script src="/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

  <!-- Core plugin JavaScript-->
  <script src="/vendor/jquery-easing/jquery.easing.min.js"></script>

  <!-- Custom scripts for all pages-->
  <script src="/js/sb-admin-2.min.js"></script>

  <!-- Page level plugins -->
  <script src="/vendor/chart.js/Chart.min.js"></script>

  <!-- Page level custom scripts -->
  <script src="/js/demo/chart-area-demo.js"></script>
  <script src="/js/demo/chart-pie-demo.js"></script>

  <!-- Send Ajax 메소드 추가 -->
  <script src="/js/common/ajax.js"></script>
</body>

</html>
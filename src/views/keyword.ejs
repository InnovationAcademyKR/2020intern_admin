<!DOCTYPE html>
<html lang="en">

<head>
  <%- include ('./common/header.ejs') %>

  <!-- Keyword Search Function -->
  <script type="text/javascript">

    const sendAjax = (method, url, data) => {
      // content-type을 설정하고 데이터 송신
      var xhr = new XMLHttpRequest();
      xhr.open(method, url);
      xhr.setRequestHeader('Content-type', "application/json");
      xhr.send(data);
      
      // 데이터 수신이 완료되면 표시
      xhr.addEventListener('load', () => {
        console.log(xhr.responseText);
        alert(xhr.responseText);
      });
    }

    //keyword badge 태그 생성함수
    const badgeFactory = (value) => {
      return `<a href="#" class="badge badge-info result-badge" >${value}</a>`
    }

    //
    const searchKeyword = (input) => {
      let keywords = document.querySelectorAll('.keyword-badge');      
      let resultDiv = document.querySelector('.search-result');

      //존재하는 키워드 중 검색어와 일치하는 키워드 검색
      let results = [];
      keywords.forEach(elem => {
        if(elem.name.includes(input))
          results.push(badgeFactory(elem.name.split('_')[0]));
      });

      if(results.length == 0) {
        alert('해당하는 데이터가 존재하지 않습니다.');
      } else {
        console.log(results);
        resultDiv.innerHTML = results.join('&nbsp;');
      }

    }

    // 키워드-카테고리 검색 폼 제출
    const searchSubmit = () => {
        var searchForm = document.searchForm;
        var type = searchForm.searchType.value;
        var searchInput = searchForm.searchInput.value;
        
        console.log(type);

        if(type == 'Choose...') {
          alert('검색타입을 선택해주세요.')
        } else {
          console.log(`${searchInput} 검색...`);
          searchKeyword(searchInput);
        }
    }  
  </script>

  <script type="text/javascript">
    const deleteKeyword = (key) => {
      let delConfirm = confirm(`'${key.split('_')[0]}' 키워드를 삭제하시겠습니까? `);
      if(!delConfirm) {
        console.log('삭제취소.');
      } else {
        console.log('삭제!');
        sendAjax('DELETE', `http://localhost:3000/keyword/${key}`, null);
      }

    }
  </script>

</head>


                          <div class="input-group-append">
                            <button class="btn btn-outline-secondary" type="button" id="button-addon2">Add</button>
                          </div>
                      </div> -->
                  </div>
                </div>
              </div>
            </div>
            <!-- End of keyword manage Card -->
         

        </div>
        <!-- /.container-fluid -->

      </div>
      <!-- End of Main Content -->

      <!-- Footer -->
      <%- include ('./common/footer.ejs') %>

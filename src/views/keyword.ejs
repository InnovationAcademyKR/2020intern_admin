                  </a>
                  <div class="dropdown-menu dropdown-menu-right shadow animated--fade-in" aria-labelledby="dropdownMenuLink">
                    <div class="dropdown-header">keyword menu</div>
                    <a class="dropdown-item" href="#">Add Keyword</a>                      
                  </div>
                </div>
              </div>
              <!-- Card Body -->
              <div class="card-body">
                <div class="row">
                  <div class="col-xl-4 col-lg-5">
                      <!-- List group -->
                      <div class="list-group" id="myList" role="tablist">
                          <% data.forEach(function (val, index) { %>
                            <a class="list-group-item list-group-item-action" data-toggle="list" href="#category-<%= index %>" role="tab"><%= val.category %>
                            </a>
                          <% }) %>
                      </div>
                      <br>
                      <div class="input-group mb-3">
                          <input type="text" class="form-control" placeholder="category name" aria-label="category name" aria-describedby="button-addon2">
                          <div class="input-group-append">
                              <button class="btn btn-outline-secondary" type="button" id="button-addon2">Add</button>
                          </div>
                      </div>
                  </div>
      
                  <div class="col-xl-8 col-lg-7">    
                      <!-- Tab panes -->
                      <div class="tab-content">
                          <% data.forEach(function (val, index) { %>
                              <div class="tab-pane" id="category-<%= index %>" role="tabpanel">
                                  <% val.keyword.forEach(function (key) { %>
                                    <% let split_key = key.split('_')[0]; %>
                                      <!-- <span class="badge badge-pill badge-success"><%= key %></span> -->
                                      <a href="#" class="badge badge-info keyword-badge" name="<%= key %>" onclick="deleteKeyword('<%= key %>')" ><%= split_key %></a>
                                  <% }) %>
                                  <a href="#" class="badge badge-primary" data-toggle="modal" data-target="#addKeywordModal" >+ ADD</a>
                              </div>
                          <% }) %>
                      </div>
                      <!-- <div class="input-group mb-3">

<div class="modal fade" id="usercreate" tabindex="-1" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">회원 생성</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="container-fluid">
          <form>
            <ul class="list-group list-group-flush">
              <!-- 회원 종류 -->
              <li class="list-group-item">
                <div class="form-row">
                  <div class="form-check form-check-inline">
                    <label class="form-check-label">
                      <h5>회원 종류</h5>
                    </label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="userType" id="userType2" value="1">
                    <label class="form-check-label" for="userType2">멘티</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="userType" id="userType3" value="2">
                    <label class="form-check-label" for="userType3">멘토</label>
                  </div>
                  <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="userType" id="userType4" value="3">
                    <label class="form-check-label" for="userType4">관리자</label>
                  </div>
                </div>
              </li>

              <!-- 이름 -->
              <li class="list-group-item">
                <div class="form-row">
                  <div class="form-inline">
                    <label>이름</label>
                  </div>
                  <div class="form-inline">
                    <input class="form-control" type="text" id="name">
                  </div>
                </div>
              </li>

              <!-- 이메일 -->
              <li class="list-group-item">
                <div class="form-row">
                  <div class="form-inline">
                    <label>E-mail</label>
                  </div>
                  <div class="form-inline">
                    <input class="form-control" type="text" id="email">
                  </div>
                </div>
              </li>

              <!-- 패스워드 -->
              <li class="list-group-item">
                <div class="form-row">
                  <div class="form-inline">
                    <label>Password</label>
                  </div>
                  <div class="form-inline">
                    <input class="form-control" type="password" id="password">
                  </div>
                </div>
              </li>
              
              <!-- 유저 권한 -->
              <li class="list-group-item">
                <div class="form-row">
                  <div class="form-inline">
                    <label>유저 권한</label>
                  </div>
                  <div class="form-inline">
                    <select class="form-control" id="permission">
                      <option>일반</option>
                      <option>관리자</option>
                      <option>슈퍼 관리자</option>
                    </select>
                  </div>
                </div>
              </li>
              <!-- 생성 버튼 -->
              <button class="btn btn-primary align-self-center" type="submit">생성</button>
            </ul>
          </form>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>